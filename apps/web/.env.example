# Web 服务地址与运行配置
PORT=3000
DATABASE_PATH=./data/cam.db
DOCKER_SOCKET_PATH=/var/run/docker.sock

# 调度器心跳超时（毫秒）
WORKER_STALE_TIMEOUT_MS=30000

# 系统认证：建议在生产环境必填
CAM_AUTH_TOKEN=replace-with-a-strong-token

# 可选：API 限流
CAM_RATE_LIMIT_ENABLED=true
CAM_RATE_LIMIT_WINDOW_MS=60000
CAM_RATE_LIMIT_MAX_REQUESTS=240

# Secrets 加解密主密钥（建议必填）
CAM_MASTER_KEY=replace-with-a-strong-master-key

# 可选：用于 PR 创建/私有仓库操作
GITHUB_TOKEN=
GITLAB_TOKEN=
GITEA_TOKEN=
# 可选：强制 Git Provider（github/gitlab/gitea），默认按 repoUrl host 自动识别
CAM_GIT_PROVIDER=

# 可选：Webhook 通知（任务状态变化等事件）
CAM_WEBHOOK_URL=
CAM_WEBHOOK_URLS=
CAM_WEBHOOK_TOKEN=
CAM_WEBHOOK_TIMEOUT_MS=4000
CAM_WEBHOOK_PROVIDER=generic
# 可选：按事件名过滤，逗号分隔，支持 task.* 通配
CAM_WEBHOOK_EVENTS=
# 可选：task.progress 只推送这些状态，逗号分隔
CAM_WEBHOOK_PROGRESS_STATUSES=running,awaiting_review,completed,failed,cancelled
